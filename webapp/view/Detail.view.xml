<mvc:View controllerName="com.zvwp.asset.myasset.zvwp_asset_myasset.controller.Detail" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<semantic:DetailPage id="page" navButtonPress="onNavBack" showNavButton="{device>/system/phone}" title="{i18n>detailTitle}"
		busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">
		<semantic:content>
			<ObjectHeader id="objectHeader" title="{Name}" icon="{/ToPhoto}" iconDensityAware="false">
				<attributes>
					<ObjectAttribute title="ID Asset" text="{IdAsset}"/>
					<ObjectAttribute title="Created on" text="{path: 'Begda', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd MMM yyyy' } }"/>
				</attributes>
			</ObjectHeader>
			<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter id="iconTabBarFilter1" text="Device info" icon="sap-icon://hint" tooltip="{i18n>detailIconTabBarInfo}">
						<core:Fragment fragmentName="com.zvwp.asset.myasset.zvwp_asset_myasset.view.fragments.DeviceOverview" id="fragmentDeviceOverview" type="XML"/>
					</IconTabFilter>
					<IconTabFilter id="iconTabBarFilter2" text="User info" icon="sap-icon://employee" tooltip="{i18n>detailIconTabBarAttachments}">
						<core:Fragment fragmentName="com.zvwp.asset.myasset.zvwp_asset_myasset.view.fragments.UserOverview" id="fragmentUserOverview" type="XML"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
			<List id="devList" headerText="{detailView>/lineItemListTitle}" items="{ToServices}" updateFinished=".onListUpdateFinished">
				<items>
					<StandardListItem title="{IdService} {DemageDesc} {Status}" iconInset="false" icon="sap-icon://wrench" iconDensityAware="false"
						type="Navigation" press="onListItemPressed" info="{path: 'Status', formatter: '.formatter.formatStatusName'}"
						infoState="{path: 'Status', formatter: '.formatter.formatStatus'}"/>
				</items>
			</List>
		</semantic:content>
		<semantic:customFooterContent>
			<Button visible="true" text="Create service" enabled="true" icon="sap-icon://wrench" press="onNewServicePress" type="Reject"></Button>
		</semantic:customFooterContent>
		<semantic:positiveAction>
			<semantic:PositiveAction text="Potwierdz dla inwentury" enabled="false" press="onInweturaPress"/>
		</semantic:positiveAction>
	</semantic:DetailPage>
</mvc:View>