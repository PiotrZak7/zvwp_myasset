<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc">
	<Dialog id="dgAutoRequestReject" title="{i18n>RejectAutoReqText}" afterClose="dialogAfterclose">
		<f:SimpleForm>
			<Label text="{i18n>RejectAutoReqTextDesc}"></Label>
			<TextArea id="taDescription" rows="4" maxLength='255'></TextArea>
		</f:SimpleForm>
		<beginButton>
			<Button text="{i18n>SendDecisonReject}" press="onRejectSave" type="Accept"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>cancel}" press="onCloseDialog" type="Reject"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>