<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.zvwp.asset.myasset.zvwp_asset_myasset.controller.ServiceDetail" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="Title" showNavButton="true" navButtonPress="onNavBack" class="sapUiResponsiveContentPadding">
				<content>
					<Panel id="servicePanel" width="auto" class="sapUiNoContentPadding">
						<headerToolbar>
							<Toolbar>
								<Title text="{IdService} - {DemageDesc}" level="H2"/>
							</Toolbar>
						</headerToolbar>
						<content>
							<f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1"
								columnsM="1">
								<f:content>
									<Label text="Contact Person"/>
									<Text text="{ContactName}"/>
									<Label text="ID Asset"/>
									<Text text="{IdAsset}"/>
									<Label text="Repair Descripton"/>
									<Text text="{RepairDesc}"/>
									<Label text="Damage description"/>
									<Text text="{DemageDesc}"/>
									<Label text="Work time"/>
									<Text text="{WorkTime}"/>
									<Label text="Status"/>
									<ObjectStatus text="{path: 'Status', formatter: '.formatter.formatStatusName'}"
										state="{path: 'Status', formatter: '.formatter.formatStatus'}"/>
									<Label text="Rating" labelFor="RI_L"/>
									<RatingIndicator id="riRaiting" displayOnly="true" maxValue="5" class="sapUiSmallMarginBottom"
										value="{path: 'Rating', formatter : '.formatter.parseFloat'}" iconSize="22px"/>
								</f:content>
							</f:SimpleForm>
						</content>
					</Panel>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button type="Accept" tooltip ="Rate service after service close" text="{i18n>rateService}" press="onPressRateService" enabled="{= ${Rating} === '0' }"/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>